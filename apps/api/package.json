{
  "name": "@monorepo/api",
  "description": "Monorepo API",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsup --watch --onSuccess 'node --env-file=.env dist/server.js'",
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest"
  },
  "jest": {
    "preset": "@monorepo-config/jest/node"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.606.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/mongodb": "^8.0.0",
    "@fastify/multipart": "^8.3.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@monorepo/types": "workspace:*",
    "@monorepo/utils": "workspace:*",
    "aws-jwt-verify": "^4.0.1",
    "fastify": "^4.28.0",
    "fastify-type-provider-zod": "^2.0.0",
    "inversify": "^6.0.2",
    "mysql2": "^3.10.2",
    "pino": "^9.2.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@monorepo-config/eslint": "workspace:*",
    "@monorepo-config/jest": "workspace:*",
    "@monorepo-config/typescript": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "pino-pretty": "^11.2.1",
    "supertest": "^6.3.4",
    "tsup": "^8.0.2",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ]
  }
}
